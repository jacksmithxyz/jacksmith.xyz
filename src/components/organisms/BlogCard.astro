---
const { url, title } = Astro.props;
---

<div>
    <h2><a href={url}>{title}</a></h2>
</div>

<style>
    h2 {
        font-size: 1.25rem;
        font-weight: 500;
        margin-bottom: -1rem;
    }

    a {
        text-decoration: underline;
    }

    a:hover {
        opacity: 80%;
    }
</style>
